<%= are_you_sure_form_for @lens do |f| -%>
  <%- if @lens.errors.any? %>
    <div id="errorExplanation">
      <h2><%= @lens.errors.count %> errors prohibited this lens from being saved:</h2>
      <ul>
      <%- @lens.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <%- end %>
      </ul>
    </div>
  <%- end %>
  <%= f.confirmation message: 'この内容でよろしいですか?' %>
  <div>
    <%= f.label :registered_at %>
    <%= f.datetime_select_or_confirm :registered_at, { order: [:year, :month, :day], use_month_numbers: true }, { class: :select } %>
  </div>
  <div>
    <%= f.label :mfr_id, 'MFR' %>
    <%= f.select_or_confirm :mfr_id, MFR.all.collect {|x| [x.name, x.id] }, { class: :select } %>
  </div>
  <div>
    <%= f.label :mount_id %>
    <%= f.collection_radio_buttons_or_confirm :mount_id, Mount.all, :id, :name, { class: :radio } %>
  </div>
  <div>
    <%= f.label :name %>
    <%= f.text_field_or_confirm :name, { class: :text } %>
  </div>
  <div>
    <%= f.label :mm, 'mm' %>
    <%= f.number_field_or_confirm :mm, { class: :text } %>
  </div>
  <div>
    <%= f.label :f, 'f' %>
    <%= f.number_field_or_confirm :f, { class: :text } %>
  </div>
  <div>
    <%= f.label :close_up %>
    <%= f.check_box_or_confirm :close_up, { class: :check }, 'available', 'unavailable' %>
  </div>
  <div>
    <%= f.label :note %>
    <%= f.text_area_or_confirm :note, { class: :text_area } %>
  </div>
  <div>
    <%= f.submit_or_confirm create: '作成する', update: '変更する', confirm: '確認画面へ', class: :button %>
    <%= f.cancel '戻る', class: :button %>
    <%= f.cancel '前のページへ', to: :back, class: :button %>
  </div>
<% end -%>
